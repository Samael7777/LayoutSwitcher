<Application x:Class="LayoutSwitcher.Gui.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             DispatcherUnhandledException="OnException"
             Exit="OnApplicationShutdown"
             ShutdownMode="OnExplicitShutdown">
    <Application.Resources>
         <ResourceDictionary>
             <ResourceDictionary.MergedDictionaries>
                 <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.xaml" />
                <ResourceDictionary Source="/ResourceDictionaries/TrayContextMenu.xaml"/>
                <ResourceDictionary Source="/ResourceDictionaries/Icons.xaml"/>
                <ResourceDictionary Source="Themes/IconButtonTheme.xaml"/>
             </ResourceDictionary.MergedDictionaries>
             </ResourceDictionary>
    </Application.Resources>
</Application>
